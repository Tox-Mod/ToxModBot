<head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
</head>

<% if(alert) { %>
    <script>
        Swal.fire({
          title: "Success!",
          icon: "success",
          text: `<%= alert %>`,
          width: 'auto',
          height: '50px',
          background: '#23272a',
          buttons: false,
          footer: "Note: This alert will close in 3 Seconds!",
          allowOutsideClick: true,
          allowEscapeKey: true,
          showConfirmButton: true,
          confirmButtonText: "Yeet this alert now!",
          confirmButtonColor: "#7289DA",
          showCancelButton: false,
          animation: true,
        })
    </script>
<% } else if (error) { %>
    <script>
        Swal.fire({
          title: "Error!",
          icon: "error",
          text: `<%= error %>`,
          width: 'auto',
          height: '50px',
          background: '#23272a',
          position: "bottom-right",
          buttons: false,
          footer: "Note: This alert will close in 3 Seconds!",
          allowOutsideClick: true,
          allowEscapeKey: true,
          showConfirmButton: true,
          showCancelButton: false,
          animation: true,
        })
    </script>
<% } %>
